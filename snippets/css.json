{
	"Big section comment": {
		"prefix": "scm",
		"body": [
			"/* ------------------------------------------------------------ *\\",
			"    ${TM_FILENAME_BASE/(\\w+)|(-)/${1:/pascalcase}${2:+ }/g}",
			"\\* ------------------------------------------------------------ */",
			"",
			".${TM_FILENAME_BASE/[\\_]//} {\n\t${0}\n}"
		],
		"description": "Make a section comment"
	},
	"Small comment": {
		"prefix": "cm",
		"body": [
			"/*  ${TM_FILENAME_BASE/(\\w+)|(-)/${1:/pascalcase}${2:+ }/g} $1  */",
			"",
			".${TM_FILENAME_BASE/[\\_]//}--$1 {\n\t$0\n}"
		],
		"description": "Make a small section comment"
	},
	"Burger button": {
		"prefix": "burger",
		"body": [
			".burger {\r",
			"\tdisplay: flex;\r",
			"\tflex-direction: column;\r",
			"\twidth: 30px;\r",
			"\tgap: 6px;\r",
			"\r",
			"\t@include breakpoint-up(tablet) {\r",
			"\t\tdisplay: none;\r",
			"\t}\r",
			"\r",
			"\tspan {\r",
			"\t\twidth: 100%;\r",
			"\t\theight: 4px;\r",
			"\t\tbackground: currentColor;\r",
			"\t\tborder-radius: 20px;\r",
			"\t\ttransition: transform;\r",
			"\t\ttransition-duration: $t-duration;\r",
			"\r",
			"\t\t&:nth-child(1) {\r",
			"\t\t\ttransform-origin: 0% 0%;\r",
			"\t\t}\r",
			"\r",
			"\t\t&:nth-child(3) {\r",
			"\t\t\ttransform-origin: 0% 100%;\r",
			"\t\t}\r",
			"\r",
			"\t\tbody.header-open & {\r",
			"\t\t\t&:nth-child(1) {\r",
			"\t\t\t\ttransform: rotate(45deg);\r",
			"\t\t\t}\r",
			"\r",
			"\t\t\t&:nth-child(2) {\r",
			"\t\t\t\ttransform: scaleY(0);\r",
			"\t\t\t}\r",
			"\r",
			"\t\t\t&:nth-child(3) {\r",
			"\t\t\t\ttransform: rotate(-45deg);\r",
			"\t\t\t}\r",
			"\t\t}\r",
			"\t}\r",
			"}"
		],
		"description": "Displays burger button styles"
	},
	"Word Press login": {
		"prefix": "wplogin",
		"body": [
			"/* ------------------------------------------------------------ *\\\r",
			"\tLogin Style\r",
			"\\* ------------------------------------------------------------ */\r",
			"\r",
			"body.login {\r",
			"\tbackground: #222;\r",
			"\tdisplay: flex;\r",
			"\talign-items: center;\r",
			"\tjustify-content: center;\r",
			"\tpadding-inline: 15px;\r",
			"}\r",
			"\r",
			"#login {\r",
			"\tborder-radius: 10px;\r",
			"\tbackground: #fff;\r",
			"\tpadding: 30px;\r",
			"\tpadding: 30px 20px;\r",
			"}\r",
			"\r",
			"#login h1 {\r",
			"\tmargin-bottom: 40px;\r",
			"}\r",
			"\r",
			"#login h1 a {\r",
			"\tbackground: url(../resources/images/logo.svg);\r",
			"\tbackground-repeat: no-repeat;\r",
			"\tbackground-size: contain;\r",
			"\tbackground-position: center;\r",
			"\tdisplay: block;\r",
			"\twidth: 180px;\r",
			"\tmargin: 0 auto;\r",
			"\theight: auto;\r",
			"\ttransition: opacity 0.3s;\r",
			"}\r",
			"\r",
			"#login h1 a:hover {\r",
			"\topacity: 0.5;\r",
			"}\r",
			"\r",
			"#login form {\r",
			"\tmargin: 0 0 20px;\r",
			"\tpadding: 30px 20px;\r",
			"\tborder: 1px solid rgba(#222, 0.9);\r",
			"\tborder-radius: 10px;\r",
			"}\r",
			"\r",
			"#login .input {\r",
			"\tborder: 1px solid rgba(#222, 0.9);\r",
			"\tborder-radius: 5px;\r",
			"\tfont-size: 16px;\r",
			"\tpadding-inline: 10px;\r",
			"\ttransition: border, box-shadow;\r",
			"\ttransition-duration: 0.2s;\r",
			"}\r",
			"\r",
			"#login input:focus {\r",
			"\tborder: 1px solid #F3EDA3;\r",
			"\tbox-shadow: 0 0 0 1px #F3EDA3;\r",
			"}\r",
			"\r",
			"#login input[type=password] {",
			"\tpadding-right: 40px;",
			"}\r",
			"\r",
			"#login .wp-hide-pw {\r",
			"\tcolor: #222;\r",
			"}\r",
			"\r",
			"#login .wp-hide-pw:hover {\r",
			"\tcolor: #F3EDA3;\r",
			"}\r",
			"\r",
			"#login input[type=checkbox]::before {\r",
			"\twidth: 0;\r",
			"\theight: 0;\r",
			"\tborder: solid #F3EDA3;\r",
			"\tborder-width: 0 2px 2px 0;\r",
			"\tpadding: 0 4px 8px 0;\r",
			"\ttransform: translate(135%, 33%) rotate(45deg);\r",
			"}\r",
			"\r",
			"#login input[type=checkbox]:checked::before {\r",
			"\tcontent: \"\";\r",
			"}\r",
			"\r",
			"#login input[type=submit].button {\r",
			"\tbackground: #fff;\r",
			"\tborder: 1px solid #222;\r",
			"\tcolor: #222;\r",
			"\ttransition: color, background;\r",
			"\ttransition-duration: 0.3s;\r",
			"} \r",
			"\r",
			"#login input[type=submit].button:hover {\r",
			"\tbackground: #222;\r",
			"\tcolor: #fff;\r",
			"}\r",
			"\r",
			".login #nav {\r",
			"\tmargin-top: 0;\r",
			"}\r",
			"\r",
			".login #nav a,\r",
			".login #backtoblog a {\r",
			"\ttransition: color 0.3s;\r",
			"}\r",
			"\r",
			".login #nav a:hover,\r",
			".login #backtoblog a:hover {\r",
			"\tcolor: #F3EDA3;\r",
			"}"
		],
		"description": "Styles the Word Press login"
	}
}
